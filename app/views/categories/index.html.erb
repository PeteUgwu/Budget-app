<%= link_to 'Back', categories_path %>
<div>
    <h2>All categories</h2>
    <% if @categories.empty? %>
        <h3>You have not added any category yet</h3>
        <%= link_to 'Add Category', new_category_path %>
    <% else %>
        <div>
            <% @categories.each do |category| %>
            <div>
                <div>
                <img src="<%= category.icon %>" alt="category icon" class="category_image" >
                </div>
                <div>
                    <h2>
                        <%= link_to category.name, category_transactions_path(category) %>
                    </h2>
                    <span>
                        <%= category.created_at.strftime("%d %b %Y") %>
                    </span>
                </div>
                <div>
                    <span>
                        Total spent: 
                    </span>
                   
                </div>
            </div>
            <% end %>
        </div>
    <% end %>
</div>