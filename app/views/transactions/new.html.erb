<div>
    <%= link_to 'Back', "/" %>
    <h3>Add new Transactions</h3>

    <%= form_with(model: Transaction, url: category_transactions_path, method: :post) do |f| %>

        <div>
            <%= f.label :name %> <br>
            <%= f.text_field :name, placeholder: 'Enter Transaction name' %>
        </div>

        <div>
            <%= f.label :amount %><br>
            <%= f.number_field :amount, step: 1, placeholder: 'How much did you spend' %>
        </div>

        <% if @categories %>
        </div>
            <%= f.label :categories %>
            <%= f.collection_check_boxes(:ids, @categories, :id, :name) do |b| %>
                <div class="checkbox">
                <%= b.check_box + b.label %>
                </div>
            <% end %>
        <div>
    <% end %>

        <div>
            <%= f.submit 'Save', class: 'Submit-btn' %>
        </div>

    <% end %>
</div>